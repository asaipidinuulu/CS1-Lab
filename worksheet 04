string="pynative"
print(string[::2])

def printEveIndexChar(str):
 for i in range(0, len(str)-1, 2):
  inputStr = input("Enter String ")
 print("Printing only even index chars")
 printEveIndexChar(inputStr)

        #4
ints=[2,45,6,4,34,5,64,3]
def x(ints):
  if ints[0]==ints[-1]:
    return True
  else:
    return False
result=(x(ints))
print(result)
