        #1
def func1(*argument):
    for i in argument:
        print(i)
func1(12,4,5,6,7)
func1(56,45,34,7,55)

def func1():
  str = input()
  print(len(str))
print(func1())

        
        #2
def recursive(n): 
  if n <= 1: 
    return n 
  else:
    return n + recursive(n - 1) 
print(recursive(10))
  
def calculateSum(num):
 if num:
   return num + calculateSum(num-1)
 else:
   return 0
res = calculateSum(10)
print(res)

